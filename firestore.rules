service cloud.firestore {
  match /databases/{database}/documents {
    // True if the user is signed in or the requested data is 'public'
    function canCreateNewQuestion() {
	    return !(get(/databases/$(database)/documents/membersData/$(request.auth.uid)).data.blocked) 
      				||
              get(/databases/$(database)/documents/membersData/$(request.auth.uid)).data.lastQuestion < request.time.date();
    }

	match /freeDaily/{contentType} {
    	allow read;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true;
    }
    
  	match /questions/{questionId} {
    	allow read;
      allow create: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date(); //&& canCreateNewQuestion();
      allow update, delete: if get(/databases/$(database)/documents/questions/$(questionId)).uid == request.auth.uid;
    }

    match /members/{memberId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }
    match /membersData/{userId} {
        allow read, create, update: if request.auth.uid == userId
    }
    match /users/{userId} {
        allow read;
    }
    match /categories/{category} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /articles/{articleId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /defence/{defenceId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /cardPlay/{cardPlayId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /bidding/{biddingId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }    

    match /quizzes/{quizId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /article/{articleId} {
      // Make sure a 'members' document exists for the requesting user and that
      // their subscriptionExpires has not passed the current time before
      // allowing any reads from the 'article' collection
      allow read: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date()

       // Allow the user to delete cities if their user document has the
       // 'admin' field set to 'true'
       allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /biddingBody/{biddingBodyId} {
      // Make sure a 'members' document exists for the requesting user and that
      // their subscriptionExpires has not passed the current time before
      // allowing any reads from the 'article' collection
      allow read: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date()

       // Allow the user to delete cities if their user document has the
       // 'admin' field set to 'true'
       allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /cardPlayBody/{cardPlayBodyId} {
      // Make sure a 'members' document exists for the requesting user and that
      // their subscriptionExpires has not passed the current time before
      // allowing any reads from the 'article' collection
      allow read: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date()

       // Allow the user to delete cities if their user document has the
       // 'admin' field set to 'true'
       allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /defenceBody/{defenceBodyId} {
      // Make sure a 'members' document exists for the requesting user and that
      // their subscriptionExpires has not passed the current time before
      // allowing any reads from the 'article' collection
      allow read: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date()

       // Allow the user to delete cities if their user document has the
       // 'admin' field set to 'true'
       allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }

    match /quiz/{quizId} {
          // Make sure a 'members' document exists for the requesting user and that
          // their subscriptionExpires has not passed the current time before
          // allowing any reads from the 'quiz' collection
          allow read: if get(/databases/$(database)/documents/members/$(request.auth.uid)).data.subscriptionExpires >= request.time.date()

           // Allow the user to delete cities if their user document has the
           // 'admin' field set to 'true'
           allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.OK == true
    }
  }
}
